<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Hyperlink?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          stylesheets="@styles.css" fx:id="gridPane">
    <Button  text="Open..." onAction="#handleClick" GridPane.columnIndex="0" GridPane.rowIndex="0"
            />
    <Button text="Button two" GridPane.columnIndex="1" GridPane.rowIndex="0"
           fx:id="buttonTwo" />
    <Button id="buttonThree" text="Button Three" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Button text="Button Four" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
    <Button text="Button Five" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
    <RadioButton text="Radio" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="Java FX Sandbox" fx:id="label"  GridPane.rowIndex="2" GridPane.columnIndex="0"
    onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"/>

    <Hyperlink text="http://www.morrisje.com" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>